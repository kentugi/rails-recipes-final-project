<h1>Results</h1>
<% @recipes.each do |recipe| %>

    <div class="index-container">
      <div class="index-recipes-card col-lg-2 mx-2 mb-2">
        <div class="index-image-div">
          <img src="https://cdn.loveandlemons.com/wp-content/uploads/2021/07/cherry-tomato-pasta-1.jpg" class="index-recipe-image">
        </div>
        <div class="recipe-content">
          <h3 class="index-recipe-title"><%=recipe.title%></h3>
          <h2 class="index-recipe-desc"><%=recipe.description.truncate(160)%></h2>
          <div class="link-bookmark">
            <a href class="www.google.com">wwww.google.com</a>
            <p class="index-recipe-bookmark"><i class="far fa-bookmark"></i></p>
          </div>
        </div>
      </div>
    </div>
<% end %>
